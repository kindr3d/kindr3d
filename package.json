{
  "name": "express-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start:dev": "nodemon server.js",
    "start": "node server.js",
    "lint": "xo",
    "test": "mocha test/**/*"
  },
  "author": "kindr3d (https://github.com/kindr3d/)",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.17.2",
    "chai": "^4.1.1",
    "express": "^4.15.3",
    "mocha": "^3.5.0",
    "mongoose": "^4.11.5",
    "mongoose-timestamp": "^0.6.0",
    "sinon": "^3.2.0",
    "sinon-mongoose": "^2.0.2"
  },
  "devDependencies": {
    "babel-jest": "^20.0.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "eslint-plugin-jest": "^20.0.3",
    "nodemon": "^1.11.0",
    "xo": "^0.18.2"
  },
  "babel": {
    "compact": false,
    "presets": [
      "es2015",
      "stage-2"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "xo": {
    "space": true,
    "ignores": [
      "assets/**/*",
      "node_modules/**/*"
    ],
    "rules": {
      "quotes": [
        "error",
        "single",
        {
          "allowTemplateLiterals": true
        }
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "camelcase": 0,
      "arrow-parens": 0,
      "unicorn/no-process-exit": 0,
      "quote-props": 0,
      "unicorn/catch-error-name": 0,
      "func-names": 0
    }
  }
}
